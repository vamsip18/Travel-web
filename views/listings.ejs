<%layout('/layout/BoilerPlate')-%>
<body>
    <div id="filters">
        <div class="filters">
            <i class="fa-solid fa-cow"></i>
            <p>Farm</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Pool</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-mountain-city"></i>
            <!-- <i class="fa-solid fa-city"></i> -->
            <p>City</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beach</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>Mountain</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-fire-flame-curved"></i>
            <p>Trending</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-person-skiing"></i>
            <p>Ski-in/out</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-sailboat"></i>
            <p>Boat</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-tower-observation"></i>
            <p>Tower</p>
        </div>
        <div class="filters">
            <i class="fa-solid fa-gamepad"></i>
            <p>Play</p>
        </div>
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
            </div>
        </div>
    </div>
    <% if (Listing.length != 0) { %>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>New Listing</button>
    </form> -->
    <div class="row" >
        <div class="row row-cols-xl-3 row-cols-lg-2 row-cols-md-2 row-cols-sm-1 list" >
            <% for (let list of Listing ) { %>
                <div class="col " id="listBox" >
                    <a href="/listings/<%= list._id %>"   >
                        <div class="card front" style="width: 23rem; height: 100%;">
                            <img src= <%= list.image.url %> class="card-img-top" alt="listing image" style="height: 15rem;width: 100%;border-radius:0.75rem">
                            <div class="card-img-overlay">
                            </div>
                            <div class="card-body">
                              <b><p class="card-text"><%= list.title %></p></b>
                              <p class="card-text">&#x20b9;<%= list.price.toLocaleString("en-IN") %>/Night
                              <i class="tax-switch-amt">&nbsp; +18% GST</i></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <% } %>
    
</body>
<script>
    let taxSwitch=document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",function(){
        let taxSwitchAmt=document.getElementsByClassName("tax-switch-amt");
        for(tax of taxSwitchAmt){
            if(tax.style.display!="inline"){
                tax.style.display="inline";
            }
            else{
                tax.style.display="none";
            }
        }
    })
</script>
